{
  "singleQuote": true,
  "trailingComma": "all",
  "tabWidth": 2,
  "overrides": [
    {
      "files": ["*.ts", "*.tsx"],
      "options": {
        "parser": "typescript"
      }
    },
    {
      "files": ["*.gql"],
      "options": {
        "singleQuote": false
      }
    },
    {
      "files": ["*.json", "*.geojson"],
      "options": {
        "parser": "json",
        "singleQuote": false
      }
    }
  ]
}
