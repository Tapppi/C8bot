{
  "name": "c8bot",
  "version": "1.0.0",
  "description": "c8 discord botti",
  "engines": {
    "node": ">= 24"
  },
  "type": "module",
  "scripts": {
    "dev": "npx nodemon",
    "start": "node --unhandled-rejections=strict build/src/index.js",
    "clean": "rimraf coverage build tmp",
    "build": "npx tsc -p tsconfig.release.json",
    "build:watch": "npx tsc -w -p tsconfig.release.json",
    "test": "npx ava",
    "test:watch": "npx ava --watch",
    "format": "npx prettier --config ./.prettierrc.json --ignore-path ./.prettierignore --write",
    "lint": "npx xo",
    "lint:fix": "npx xo --fix",
    "migrate": "cd src && npx dotenv-cli dotenv -e ../.env npx knex migrate:latest",
    "rollback": "cd src && npx dotenv-cli dotenv -e ../.env npx knex migrate:rollback",
    "seed": "cd src && npx dotenv-cli dotenv -e ../.env npx knex seed:run",
    "seed:prd": "cd build/src && npx dotenv-cli dotenv -e ../.env.prd npx knex seed:run",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Tapppi/C8bot.git"
  },
  "keywords": [
    "c8"
  ],
  "author": "",
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/Tapppi/C8bot/issues"
  },
  "homepage": "https://github.com/Tapppi/C8bot#readme",
  "devDependencies": {
    "@types/node": "^24.0.0",
    "ava": "^6.0.0",
    "dotenv-cli": "^11.0.0",
    "husky": "^9.0.0",
    "lint-staged": "^16.2.7",
    "nodemon": "^3.0.0",
    "prettier": "^3.0.0",
    "rimraf": "^6.1.2",
    "ts-node": "^10.9.0",
    "typescript": "^5.0.0",
    "xo": "^0.59.0"
  },
  "dependencies": {
    "@types/nanoid-dictionary": "^4.2.0",
    "discord.js": "^14.0.0",
    "dotenv": "^17.2.3",
    "knex": "^3.0.0",
    "libsodium-wrappers": "^0.8.0",
    "nanoid": "^5.0.0",
    "nanoid-dictionary": "^5.0.0",
    "objection": "^3.1.0",
    "pg": "^8.13.0",
    "tslib": "^2.8.0",
    "zlib-sync": "^0.1.9"
  },
  "optionalDependencies": {
    "bufferutil": "^4.0.8",
    "utf-8-validate": "^6.0.0"
  },
  "xo": {
    "prettier": true,
    "rules": {
      "unicorn/filename-case": [
        "error",
        {
          "case": "kebabCase"
        }
      ],
      "import/extensions": [
        "error",
        "ignorePackages",
        {
          "js": "always",
          "ts": "never"
        }
      ],
      "@typescript-eslint/no-unused-vars": [
        "error",
        {
          "varsIgnorePattern": "^_"
        }
      ]
    },
    "overrides": [
      {
        "files": "src/models/*.ts",
        "rules": {
          "unicorn/filename-case": [
            "error",
            {
              "case": "pascalCase"
            }
          ]
        }
      },
      {
        "files": [
          "src/migrations/*.ts",
          "src/seeds/**/*.ts"
        ],
        "rules": {
          "unicorn/filename-case": [
            "error",
            {
              "case": "snakeCase"
            }
          ]
        }
      }
    ]
  },
  "lint-staged": {
    "*.ts": [
      "npm run format",
      "npm run lint:fix"
    ],
    "*.tsx": [
      "npm run format",
      "npm run lint:fix"
    ],
    "*.js": [
      "npm run format",
      "npm run lint:fix"
    ],
    "*.json": [
      "npm run format"
    ],
    "*.geojson": [
      "npm run format"
    ]
  },
  "nodemonConfig": {
    "ignore": [
      "build/",
      "test/"
    ],
    "ext": "ts,js,jsx,json",
    "exec": "node --import ts-node/esm --unhandled-rejections=strict ./src/index.ts",
    "env": {
      "NODE_ENV": "development"
    }
  }
}
