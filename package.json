{
  "name": "c8bot",
  "version": "1.0.0",
  "description": "c8 discord botti",
  "engines": {
    "node": ">= 14.16 <15"
  },
  "scripts": {
    "dev": "npx nodemon",
    "start": "node --unhandled-rejections=strict build/src/index.js",
    "clean": "rimraf coverage build tmp",
    "build": "npx tsc -p tsconfig.release.json",
    "build:watch": "npx tsc -w -p tsconfig.release.json",
    "test": "npx ava",
    "test:watch": "npx ava --watch",
    "format": "npx prettier --config ./.prettierrc.json --ignore-path ./.prettierignore --write",
    "lint": "npx xo",
    "lint:fix": "npx xo --fix",
    "migrate": "cd src && npx dotenv-cli dotenv -e ../.env npx knex migrate:latest",
    "rollback": "cd src && npx dotenv-cli dotenv -e ../.env npx knex migrate:rollback",
    "seed": "cd src && npx dotenv-cli dotenv -e ../.env npx knex seed:run",
    "seed:prd": "cd build/src && npx dotenv-cli dotenv -e ../.env.prd npx knex seed:run",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Tapppi/C8bot.git"
  },
  "keywords": [
    "c8"
  ],
  "author": "",
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/Tapppi/C8bot/issues"
  },
  "homepage": "https://github.com/Tapppi/C8bot#readme",
  "devDependencies": {
    "@types/node": "^14.14.41",
    "ava": "^3.15.0",
    "dotenv-cli": "^4.0.0",
    "husky": "^6.0.0",
    "lint-staged": "^10.5.4",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4",
    "xo": "^0.38.2"
  },
  "dependencies": {
    "@types/nanoid-dictionary": "^4.2.0",
    "discord.js": "^12.5.3",
    "dotenv": "^8.2.0",
    "knex": "^0.95.4",
    "libsodium-wrappers": "^0.7.9",
    "nanoid": "^3.1.22",
    "nanoid-dictionary": "^4.3.0",
    "objection": "^2.2.15",
    "pg": "^8.6.0",
    "tslib": "^2.2.0",
    "zlib-sync": "^0.1.7"
  },
  "optionalDependencies": {
    "erlpack": "^0.1.3",
    "bufferutil": "^4.0.3",
    "utf-8-validate": "^5.0.4"
  },
  "xo": {
    "prettier": true,
    "unicorn/filename-case": "none",
    "overrides": [
      {
        "files": "src/models/*.ts",
        "rules": {
          "unicorn/filename-case": [
            "error",
            {"case": "pascalCase"}
          ]
        }
      },
      {
        "files": ["src/migrations/*.ts", "src/seeds/**/*.ts"],
        "rules": {
          "unicorn/filename-case": [
            "error",
            {"case": "snakeCase"}
          ]
        }
      }
    ]
  },
  "lint-staged": {
    "*.ts": [
      "npm run format",
      "npm run lint:fix"
    ],
    "*.tsx": [
      "npm run format",
      "npm run lint:fix"
    ],
    "*.js": [
      "npm run format",
      "npm run lint:fix"
    ],
    "*.json": [
      "npm run format"
    ],
    "*.geojson": [
      "npm run format"
    ]
  },
  "nodemonConfig": {
    "ignore": [
      "build/",
      "test/"
    ],
    "ext": "ts,js,jsx,json",
    "exec": "node --require ts-node/register --unhandled-rejections=strict ./src/index.ts",
    "env": {
      "NODE_ENV": "development"
    }
  }
}
